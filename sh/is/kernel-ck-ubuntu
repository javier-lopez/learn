#versão do kernel a ser compilado
kernel=3.9
#patch de atualização
patchkernel=3.9.2
#patch BFQ
bfq=3.9.0-v6r1
vbfq=v6r1
#patch ck
patchck=3.9-ck1
#sufixo
ckk=ck1
#arch
arqt=$(dpkg --print-architecture)
#####################################

#####################################
# 3.8
#versão do kernel a ser compilado
#kernel=3.8
#patch de atualização
#patchkernel=3.8.2
