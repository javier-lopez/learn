_isalphanum()
{ #check for alphanum strings, return 0 if all upper+lower+digits, 1 otherwise
  # Remove all unacceptable chars
  local compressed="$(printf "%s\\n" "$1" | sed -e 's/[^[:alnum:]]//g')"

  [ X"$compressed" != X"$input" ] && return 0 || return 1
}
