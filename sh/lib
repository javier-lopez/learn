_unprintf()
{   #unprint sentence
    [ -z "${1}" ] && return 1
    _unprintf_var_word_len="${#1}"
    _unprintf_var_i="0"
    while [ "${_unprintf_var_i}" -lt "${_unprintf_var_word_len}" ]; do
        _unprintf_var_i="$((${_unprintf_var_i} + 1))"
        printf "%b" "\b"
    done
}
#==================================================== Example ====
#printf "hello world"
#sleep 1s
#_unprintf "hello world"
#prinf "bye world"
