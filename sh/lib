_notify()
{   #notify a msg
    [ -z "$1" ] && return 1

    if [ X"$TERM" = X"linux" ] || [ X"$TERM" = X"dumb" ]; then
        notify-send -t 3000 "${@}"
    else
        printf "%s" "${1}: "
        shift
        while [ -n "$*" ]
        do
            printf "%s\\n" "${1}"
            shift
        done
    fi
}
#==================================================== Example ====
#_notify "You need html2text" "\$ sudo apt-get install html2text"
#=================================================================

_printtime()
{  #format seconds to a pretty string
    NUM=$1
    MIN=0
    HOUR=0
    DAY=0
    if [ $NUM -gt 59 ]; then
        SEC=$(expr $NUM % 60)
        NUM=$(expr $NUM / 60)
        if [ $NUM -gt 59 ]; then
            MIN=$(expr $NUM % 60)
            NUM=$(expr $NUM / 60)
            if [ $NUM -gt 23 ]; then
                HOUR=$(expr $NUM % 24)
                DAY=$(expr $NUM / 24)
            else
                HOUR=$NUM
            fi
        else
            MIN=$NUM
        fi
    else
        SEC=$NUM
    fi
    printf "%s\\n" ""$DAY"d "$HOUR"h "$MIN"m "$SEC"s"
}
#==================================================== Example ====
