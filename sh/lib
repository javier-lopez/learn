_refarray()
{   #exports an array to another
    #http://ihaveabackup.net/2012/01/29/a-workaround-for-passing-arrays-in-bash/
    [ -z "$1" ] && return 1
    local varname="$1"
    local export_as="$2"
    local code=$(declare -p "$varname")
    printf "%s\\n" "${code/$varname/$export_as}"
}
